<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_base_title"/>
    <TextView
        style="@style/style_text_1"
        android:textSize="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="充值金额"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/text_symbol"
            style="@style/style_text_1"
            android:textSize="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="￥"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_symbol"
            android:layout_marginLeft="12dp"
            android:hint="请输入充值金额"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shape_line"
            android:layout_toRightOf="@+id/text_symbol"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        style="@style/style_text_1"
        android:textSize="11dp"
        android:textColor="@color/text_color_9"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="温馨提示:充值金额的90%为实际账户金额，10%为平台管理费"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shape_line"
            />
        <TextView
            android:id="@+id/text_use"
            style="@style/style_text_1"
            android:textSize="13.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="实际账户可用"/>
        <TextView
            android:id="@+id/text_use_money"
            style="@style/style_text_1"
            android:textSize="13.5dp"
            android:textColor="@color/text_color_2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_use"
            android:layout_marginTop="12dp"
            android:text="100元"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shape_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <TextView
            android:id="@+id/text_dui"
            style="@style/style_text_1"
            android:textSize="13.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="可兑换平台金豆"/>
        <TextView
            android:id="@+id/text_use_bean"
            style="@style/style_text_1"
            android:textSize="13.5dp"
            android:textColor="@color/text_color_2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_dui"
            android:layout_marginTop="12dp"
            android:text="100颗"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shape_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_recharge"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="86dp"
        android:text="确定充值"
        android:textColor="@color/text_color_3"
        android:textSize="16dp"
        android:background="@drawable/shape_button"/>





</LinearLayout>
