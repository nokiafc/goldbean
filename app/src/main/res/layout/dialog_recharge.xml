<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_button_white_background">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="17dp"
            android:textColor="@color/text_color_5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:id="@+id/layout_alipay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="20dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_line" />
            <ImageView
                android:layout_height="29dp"
                android:layout_width="29dp"
                android:background="@drawable/icon_alipay"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="14dp"
                android:textColor="@color/text_color_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:id="@+id/img_alipay"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_pay_choose"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_wechat"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/layout_alipay">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_line" />
            <ImageView
                android:layout_height="29dp"
                android:layout_width="29dp"
                android:background="@drawable/icon_wechat"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="14dp"
                android:textColor="@color/text_color_5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:id="@+id/img_wechat"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_pay_unchoose"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_recharge_confirm"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:background="@drawable/shape_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_wechat"
            android:layout_marginTop="20dp"
            android:text="确定"
            android:textColor="@color/text_color_3"
            android:textSize="16dp"/>
        <Button
            android:id="@+id/btn_recharge_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="16dp"
            android:background="@null"
            android:layout_below="@+id/btn_recharge_confirm"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color_8"/>


    </RelativeLayout>

</RelativeLayout>
